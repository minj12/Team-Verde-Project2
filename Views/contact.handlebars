<!-- Contact Page -->
<div class="container-fluid contact" id="contactPage">
    <form>
        <h3 class="text-center" style="color:white;">Contact</h3><br>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-3">
                <input type="text" class="form-control" placeholder="First name">
            </div>
            <div class="col-3">
                <input type="text" class="form-control" placeholder="Last name">
            </div>
            <div class="col-3"></div>

        </div><br>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-3">
                <input type="text" class="form-control" placeholder="Organization">
            </div>
            <div class="col-3">
                <input type="text" class="form-control" placeholder="Designation">
            </div>
            <div class="col-3"></div>
        </div><br>

        <div class="row">
            <div class="col-3"></div>
            <div class="col-3">
                <input type="text" class="form-control" placeholder="Phone number(optional)">
            </div>
            <div class="col-3">
                <input type="text" class="form-control" placeholder="Email">
            </div>
            <div class="col-3"></div>
        </div><br>

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 text-center">
                <div class="form-group">
                    <label for="message">Send a message</label>
                    <textarea class="form-control" rows="5" id="comment"></textarea><br>
                    <button type="submit" class="btn" data-aos="zoom-in" id="submitBtn">Submit</button>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </form>
</div>
<!-- END OF CONTACT PAGE -->

